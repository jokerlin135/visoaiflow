modules = ["web", "swift-5.8", "ruby-3.2", "nodejs-20", "python-3.11"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["flutter"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Flutter Web App"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "HuggingFace API Proxy"

[[workflows.workflow]]
name = "Flutter Web App"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 -m http.server 5000 --directory build/web --bind 0.0.0.0"
waitForPort = 5000

[[workflows.workflow]]
name = "HuggingFace API Proxy"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node api/huggingface_proxy.js"
waitForPort = 3000

[workflows.workflow.metadata]
outputType = "console"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 39761
externalPort = 3000

[[ports]]
localPort = 3000
externalPort = 3000

[deployment]
deploymentTarget = "autoscale"
run = ["python3", "-m", "http.server", "5000", "--directory", "build/web", "--bind", "0.0.0.0"]
build = ["bash", "build_web.sh"]
